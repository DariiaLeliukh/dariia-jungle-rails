<h1 class="my-5">Dashboard</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h3 class="card-title mb-4">Products</h5>
        <h4 class="card-subtitle mb-2 text-muted"><%= @product_count %></h4>
        <%= link_to 'All Products', [:admin, :products], class: 'btn btn-success mt-2' %>
      </div>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <h3 class="card-title mb-4">Categories</h5>
        <h4 class="card-subtitle mb-2 text-muted"><%= @category_count %></h4>
      </div>
    </div>
  </div>
</div>
